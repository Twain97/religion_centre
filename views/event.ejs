<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/eventHead.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="w-full mt-20  border-green-500 flex">
        <div class="w-full bg-slate-100 px-4 py-5 border-red-300 rounded-lg shadow-lg">
            <div id="compendium" class=" flex flex-col space-y-6">
                <div><p class="font-bold text-2xl text-center">ALL EVENTS.</p></div>
                
                <% if (events.length ==0) {%>
                    <p>No Events Yet!</p>
                <%}else{ %>
                    <ul class=" border-blue-500 flex flex-col p-1">
                        <% events.forEach(event => {%>
                            <li class=" m-1 flex flex-col py-2 justify-items-start pl-5  rounded-md shadow-md space-y-5 bg-white w-full">
                                <a href="/events/<%= event._id%>">
                                    <% var createdAt = new Date(event.startDate) %>
                                    <% var startDate = createdAt.toLocaleDateString('en-US') %>
                                     

                                    <b class=" uppercase font-bold text-lg"><%=event.name%></b>
                                    <p> <span class="text-sm font-semibold mt-5">Starting On: </span><%= startDate %></p>
                                    <p class="text-sm align-bottom p-1 w-fit bg-blue-500 text-white rounded-md text-center"> Click for more details.</p>
                                 </a>     
                                </li>          
                       <% }); %>
                        </ul>
                    
                <% } %>
            </div>
        </div>
    </div>


    <%- include('./partials/footer.ejs') %>
</body>
</html>