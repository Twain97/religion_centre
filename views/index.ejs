<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="w-full  border-green-500 flex">
        <div class="w-3/4 bg-slate-200 px-4 py-5 border-red-300 mx-auto rounded-lg shadow-lg">
            <div class=" flex flex-col space-y-6">
                <div><p class="font-bold text-2xl text-center">ALL ARTICLES.</p></div>
                
                <% if (blogs.length ==0) {%>
                    <p>No Events Yet!</p>
                <%}else{ %>
                    <ul class=" border-blue-500 flex flex-wrap items-center justify-around p-1">
                        <% blogs.forEach(blog => {%>
                            <% if (blog.status == 'confirmed') { %>
                            <li class="m-auto w-wd3  flex flex-col p-2 justify-items-start  rounded-md shadow-md space-y-5 bg-white my-3 md:w-80">
                                <a href="/blogs/<%= blog._id%>">

                                    <b class=" uppercase font-bold text-lg"><%=blog.title%></b>
                                    <p> <span class="text-sm font-semibold mt-5"><%= blog.snippet %></span></p>
                                    <p class="text-sm p-1 bg-blue-500 text-white rounded-md text-center"> Click for more details.</p>
                                 </a>     
                                </li>
                                <% } %>             
                       <% }); %>
                        </ul>
                    
                <% } %>
            </div>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>