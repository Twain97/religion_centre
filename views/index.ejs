<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<style>
    #home{
        background: linear-gradient(20deg, rgba(4, 2, 30, 0.281), rgba(0, 0, 0, 0.726)), url('/worshiper.jpg');
        background-repeat: no-repeat;
        background-blend-mode: darken;
        height: 100vh;
        background-size:100%;
    }
</style>
<body>
    <%- include('./partials/nav.ejs') %>
    <div id="home" class="w- flex flex-col text-center  bg-blue-600 text-white">
        <h1 class="w-full text-5xl m-auto font-bold px-14 border-red-500">DIGITAL COMPENDIUM FOR RELIGIOUS CENTRE IN EKITI.</h1>
        <div class="text-base bg-transparent p-2 rounded-full border-2 border-slate-300 font-semibold m-auto" onclick="scrollToCompendium()"> <a href="/"></a> <span class="cursor-pointer border-slate-300 rounded-full p-1"> Read More.</span></div>
    </div>
    <div class="w-full  border-green-500 flex">
        <div class="w-full bg-slate-100 px-4 py-5 border-red-300 rounded-lg shadow-lg">
            <div id="compendium" class=" flex flex-col space-y-6">
                <div><p class="font-bold text-2xl text-center">COMPENDIUM.</p></div>
                
                <% if (blogs.length ==0) {%>
                    <p>No Events Yet!</p>
                <%}else{ %>
                    <ul class=" border-blue-500 flex flex-col p-1">
                        <% blogs.forEach(blog => {%>
                            <% if (blog.status == 'confirmed') { %>
                            <li class=" m-1 flex flex-col py-2 justify-items-start pl-5  rounded-md shadow-md space-y-5 bg-white w-full">
                                <a href="/blogs/<%= blog._id%>">

                                    <b class=" uppercase font-bold text-lg"><%=blog.title%></b>
                                    <p> <span class="text-sm font-semibold mt-5"><%= blog.snippet %></span></p>
                                    <p class="text-sm align-bottom p-1 w-fit bg-blue-500 text-white rounded-md text-center"> Click for more details.</p>
                                 </a>     
                                </li>
                                <% } %>             
                       <% }); %>
                        </ul>
                    
                <% } %>
            </div>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>
<script>
     const scrollToCompendium = () =>{ 
            const element = document.getElementById('compendium');
            element.scrollIntoView({ behavior: 'smooth' });
            toggleCollapse2()
        }
</script>
</html>